{
    "manifestVersion": 1,
    "id": "devops-download-files",
    "name": "DevOps - Download files",
    "version": "0.0.6",
    "publisher": "dpolania",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Tools for building/releasing with DevOps. Includes build/release tasks.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/extension-icon.png"        
    },
    "scopes": ["vso.code_full"],
    "files": [
        {
            "path": "downloadFiles"
        }
    ],
    "contributions": [
        {
            "id": "publish-download-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "downloadFiles"
            }
        }
    ]
}